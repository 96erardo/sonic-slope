{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: clang++ compilar archivo activo",
      "command": "/usr/bin/clang++",
      "args": [
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "-std=c++17",
        "-I/opt/homebrew/Cellar/sfml/3.0.0/include",
        "-L/opt/homebrew/Cellar/sfml/3.0.0/lib",
        "-lsfml-graphics",
        "-lsfml-window",
        "-lsfml-system",
        "-g",
        "${fileDirname}/**.cpp",
        "-o",
        "${fileDirname}/main"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Tarea generada por el depurador."
    }
  ],
  "version": "2.0.0"
}